<!DOCTYPE html>
<html>
  <head>
    <title>Party</title>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="images/favicon1.ico" type="image/png">

  </head>
  <body>
  <div class="container-fluid auth-form-container">
        <div class="container auth-form">
            <form action="/login" method="POST">
                <div>
                  <!-- <label class="login-label" for="username">Username:</label> -->
                  <input class="auth-input1"type="text" name="username" placeholder="Username">
                  </div>
                <div>
                  <!-- <label class="login-label" for="password">Password:</label> -->
                  <input class="auth-input1" type="password" name="password" placeholder="Password">
                </div>
                      <% if (typeof message != "undefined") { %>
                      <div class="error-message"><%= message %></div>
                      <% } %>
                <div>
                   <p class="message">Not registered? <a href="/signup">Create an account</a></p>
                </div>
              <div>
                <input class="auth-button1" type="submit" value="Log In">
              </div>
            </form>
    </div>
</div>
</body>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
</html>
